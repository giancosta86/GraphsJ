<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane id="BorderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="266.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml"
            fx:controller="info.gianlucacosta.graphsj3.stages.newscenario.DefaultNewScenarioDialogController">
    <bottom>
        <VBox prefHeight="288.0" prefWidth="600.0" spacing="20.0">
            <children>
                <RadioButton fx:id="builtinScenarioRadio" mnemonicParsing="false" selected="true"
                             text="Built-in scenario:">
                    <toggleGroup>
                        <ToggleGroup fx:id="scenarioKind"/>
                    </toggleGroup>
                </RadioButton>
                <GridPane fx:id="builtinScenarioBox" hgap="10.0">
                    <children>
                        <Label text="Choose a scenario:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <ComboBox fx:id="builtinScenariosCombo" maxWidth="1.7976931348623157E308"
                                  GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    </children>
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0"
                                           prefWidth="100.0"/>
                    </columnConstraints>
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                    </padding>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                </GridPane>
                <RadioButton fx:id="customScenarioRadio" mnemonicParsing="false" text="Custom scenario:"
                             toggleGroup="$scenarioKind"/>
                <GridPane fx:id="customScenarioBox" hgap="5.0" vgap="10.0">
                    <children>
                        <Label text="Jar file:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="jarField" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <Button mnemonicParsing="false" onAction="#browseForJarFile" text="Browse..."
                                GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                        <Label text="Scenario descriptor:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="scenarioDescriptorClassField" prefWidth="200.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="1"/>
                        <Button mnemonicParsing="false" onAction="#scanJarFile" text="Scan jar..."
                                GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    </children>
                    <columnConstraints>
                        <ColumnConstraints fillWidth="false" hgrow="NEVER" maxWidth="-Infinity" minWidth="10.0"
                                           prefWidth="110.0"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="NEVER" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <padding>
                        <Insets left="25.0"/>
                    </padding>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                </GridPane>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
    </bottom>
</BorderPane>
