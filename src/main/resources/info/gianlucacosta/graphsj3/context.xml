    <bean class="info.gianlucacosta.graphsj3.stages.main.DefaultMainWindow"/>
    <bean class="info.gianlucacosta.graphsj3.stages.main.DefaultMainWindowController"/>

    <bean class="info.gianlucacosta.graphsj3.stages.newscenario.DefaultNewScenarioDialog"/>
